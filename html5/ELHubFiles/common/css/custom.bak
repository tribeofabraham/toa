/*Sound Wall Styling*/
.sdw #wrapper .img {
    border-radius:2em;
}

.sdw #wrapper .lst li.soundFlag {
    background-color:var(--primary);
    height:2em;
    color:#fff;
    overflow: visible;
    font-size:2em;
    font-family:"DisplayText";
    line-height: 1.75em;
    margin:1em;
    margin-bottom:.5em;
}

.sdw #wrapper .swIconLabel {
    font-size:8em;
    color:#fff;
}

.sdw #wrapper .swSubGroup {
    background-color:var(--primary);
    z-index: 100000;
}

.sdw #wrapper .vid {
    background-color:var(--secondary);
    z-index: 100000;
    border-radius:2em;
    background-image:url(../../common/img/interface/playVid.svg);
    background-size:auto 70%;
    background-position:center center;
    background-repeat:no-repeat;
    cursor:pointer;
}

.sdw #wrapper .aud {
    background-color:var(--primary);
    z-index: 100000;
    border-radius:50%;
    background-image:url(../../common/img/interface/playAud.svg);
    background-size:auto 50%;
    background-position:center center;
    background-repeat:no-repeat;
    cursor:pointer;
    border:solid .25em var(--primary);
}

.sdw #wrapper .aud:hover {
    background-color:var(--primaryLight);
    border:solid .25em var(--secondary);
}

.sdw #wrapper .swLabelMed {
   font-size:6em;
}

