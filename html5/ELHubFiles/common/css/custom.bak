/*Styling for individual programs*/

/*Countdown Program Branding*/
body.cdn #wrapper {
    background-color:var(--cdnBookBack);
}

/*Blast Program Branding*/
body.blt #wrapper {
    background-color:var(--bltBookBack);
}

/*HDWord Program Branding*/
body.hdw #wrapper {
    background-color:var(--hdwBookBack);;
}

/*Soundwall Program Branding*/
body.sdw #wrapper {
    background-color:var(--textBlack);
}

/*Noel & Lindsey: Putting Styling for E-Books Here*/
#wrapper .sld {
    background-color:var(--clearBack);
    border-radius:1.5em;
    font-size: .9em;
}

.object.ebkBrand.grp {
    background-color:var(--clearBack); 
    border-radius:.5em;
}
#wrapper .ebkBrand.title {
    font-size: 2em;
    color:var(--ghost80);
}

.cdn #wrapper .ebkBrand.title {
    font-size: 2em;
    color:var(--cdnBookTexts);
}

#wrapper .ebkBrand.logo {
    border-radius:0;
}

.ebk:focus {
    border:solid .25em var(--primary);
}

.ebk {
    position:absolute;
	background-color:rgba(0,0,255,0);
    border:solid .25em rgba(0,0,255,0);
	border-radius:.5em;
	background-position:center center;
	background-size:110% auto;
    background-repeat:no-repeat;
    font-size:.8em;
    overflow: visible;
    height:100%;
    width:100%;
    top:-.3em;
    left:-.3em;
}

.ebkLink.blank .ebk{
    cursor:not-allowed;
}

.ebkLink .lockedGhost {
    position:absolute;
    top:-.25em;
    left:-.25em;
    bottom:-.45em;
    right:-.45em;
    background-color:var(--ghostBlack40);
    z-index:1000;
    cursor:not-allowed;
       border-radius:.5em;
}

.cdn .ebkLink .lockedGhost .image {
    position:absolute;
    top:0em;
    left:1em;
    height:3em;
    width:2em;
    background-image:url(../../common/img/interface/lockedPrimary.png);
    background-size: 100% auto;
    background-repeat:no-repeat;
    cursor:not-allowed;
 
}

.blt .ebkLink .lockedGhost .image {
    position:absolute;
    top:0em;
    left:1em;
    height:3em;
    width:2em;
    background-image:url(../../common/img/interface/lockedPrimary.png);
    background-size: 100% auto;
    background-repeat:no-repeat;
    cursor:not-allowed;
 
}

.hdw .ebkLink .lockedGhost .image {
    position:absolute;
    top:0em;
    left:1em;
    height:3em;
    width:2em;
    background-image:url(../../common/img/interface/lockedSecondary.png);
    background-size: 100% auto;
    background-repeat:no-repeat;
    cursor:not-allowed;
 
}

.object.ebkPlayer {
    background-color:rgba(64,64,64,1);
    border:solid .25em rgba(0,0,0,1);
    border-radius:2em;
    overflow: hidden;
}

.object.ebkPlayer iframe {
    width:100%;
    height:100%;
    top:0;
    bottom:0;
    left:0;
    right:0;
}

.ebkLabel {
    position:relative;
    top:8em;
    text-align:center;
    font-family:'DisplayText';
    color:#fff;
}

/*Specific to Countdown E-books*/
.cdn .ebkLabel {
    color:var(--cdnBookText);
}

.ebk {
    border: solid .2em #000;
}

.ebkLink {
position:absolute;
    top:0;
    left:0;
    width:6em;
    height:7em;

    text-decoration: none;
}
.ebkLink:focus {
position:absolute;
    top:0;
    left:0;
    width:6em;
    height:7em;
    border:solid .25em blue;
    text-decoration: none;
}
.ebkBlank {
    background-color:#333;
    height:100%;
    width:7.5em;
    top:.5em;
    left:.5em;
    border: solid .1em #555;
}
.ebkBlank2 {
    background-color:#fff;
    height:100%;
    width:7.5em;
    top:.4em;
    left:.4em;
    border: solid .1em #555;
}
.ebkBlank3 {
    background-color:#fff;
    height:100%;
    width:7.5em;
    top:.2em;
    left:.2em;
    border: solid .1em #555;
}


.pge {
	background-color:white;
	border-radius:1em;
	display:none;
}
.imageLtextR img {
	height:80%;
	margin-left:1.5em;
	float:left;
	border-radius:1em;
}
#wrapper .imageLtextR div.txt {
	position:absolute;
	top:2em;
	bottom:2em;
	left:10em;
	width:10em;
	text-align: left;
}
